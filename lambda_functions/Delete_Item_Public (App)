
import json
import boto3

dynamodb = boto3.resource('dynamodb')
table = dynamodb.Table('property')

def lambda_handler(event, context):
    print(f"Incoming event: {event}")  # Log raw event

    try:
      
        if 'body' in event:
            event = json.loads(event['body'])

        user_name = event.get('user_name')
        list_name = event.get('list_name')
        target_item = event.get('item', {})

        print("Parsed input:", json.dumps(event))

        
        response = table.get_item(Key={'user_name': user_name})
        print(f"DynamoDB response: {response}")

        if 'Item' not in response:
            return {
                'statusCode': 404,
                'body': json.dumps('User not found')
            }

        items = response['Item'].get(list_name, [])
        print(f"Items in '{list_name}': {items}")

        
        index_to_remove = None
        for index, item_in_list in enumerate(items):
            if item_in_list['name'].lower() == target_item.get('name', '').lower():
                index_to_remove = index
                break

        if index_to_remove is None:
            return {
                'statusCode': 404,
                'body': json.dumps('Item not found')
            }

        
        update_response = table.update_item(
            Key={'user_name': user_name},
            UpdateExpression=f"REMOVE {list_name}[{index_to_remove}]",
            ReturnValues="UPDATED_NEW"
        )
        print(f"Update response: {update_response}")

        return {
            'statusCode': 200,
            'body': json.dumps('Item removed successfully')
        }

    except Exception as e:
        print(f"Error: {e}")
        return {
            'statusCode': 500,
            'body': json.dumps(str(e))
        }
